#pagelet-hotcomment{width:250px;position:relative}
#pagelet-hotcomment .inner{padding-top:12px;margin-bottom:42px;font-size:14px;line-height:20px;color:#6b6b6b;z-index:6;top:50px;background-color:#fff;width:250px}
#pagelet-hotcomment .source a{color:#6b6b6b}
#pagelet-hotcomment .title{font-size:18px;color:#9e9e9e; font-weight:700;background-color:#fff;}
#pagelet-hotcomment .top-btn{line-height:20px;height:20px;position:absolute;display:block;color:#939393;border:1px solid #ddd;border-radius:12px;padding:0 8px;background-color:#f8f8f8;right:0;top:0}
#pagelet-hotcomment .top-btn:hover{background-color:#ddd}
#pagelet-hotcomment .comment-list{}
#pagelet-hotcomment .comment-list li{margin:10px 0;line-height:20px; border-bottom:1px dashed #ddd; padding:10px 0;}
#pagelet-hotcomment .comment-title{font-size:16px;margin-bottom:8px}
#pagelet-hotcomment .comment-title img{width:22px;height:22px;border-radius:11px;vertical-align:top}
#pagelet-hotcomment .comment-title .name{color:#4f5157;width:120px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;display:inline-block;*display:inline;*zoom:1}
#pagelet-hotcomment .comment-title .btn{float:right;color:#899ec5}
#pagelet-hotcomment .comment-title .btn .icon{margin-right:3px}
#pagelet-hotcomment .comment-title .btn:hover{color:#4e7dd2}
#pagelet-hotcomment .comment{background-color:#fbfbfb; padding:12px;position:relative;margin-bottom:5px}
#pagelet-hotcomment .comment .arrow{position:absolute;height:6px;width:10px;top:-6px;left:45px;display:block;background-repeat: no-repeat;}
#pagelet-hotcomment .label{color:#9e9e9e;line-height:20px}
#pagelet-hotcomment .liked .icon-like-blue{background-repeat: no-repeat;}
#pagelet-hotcomment .liked .liked-num{color:#fd5252}
#pagelet-hotcomment .comment .arrow{background-position:-4px 0px}
#pagelet-hotcomment .liked .icon-like-blue{background-position:0px -36px}
#pagelet-hotcomment .comment .arrow, #pagelet-hotcomment .liked .icon-like-blue{background-image: url(../images/hotcomment_z_2ed396f.png)}
