{__NOLAYOUT__}
<form action="__SELF__" class="am-form am-text-left" method="post" data-am-validator>
    <input type="hidden" name="uid" value="{$Think.get.uid}" placeholder="显示名称" />
    <div class="am-g am-margin-top">
        <div class="am-u-sm-3 am-text-right">显示名称</div>
        <div class="am-u-sm-9">
            <input type="text" class="am-input-sm" name="show_name" value="{$info.show_name}" placeholder="显示名称" required/>
        </div>
    </div>

    <div class="am-g am-margin-top">
        <div class="am-u-sm-3 am-text-right">名称</div>
        <div class="am-u-sm-9">
            <input type="text" class="am-input-sm" name="title" value="{$info.title}" placeholder="名称" required/>
        </div>
    </div>
    <div class="am-g am-margin-top">
        <div class="am-u-sm-3 am-text-right">描述</div>
        <div class="am-u-sm-9">
            <textarea name="desc">{$info.desc}</textarea>
        </div>
    </div>

    <div class="am-g am-margin-top ">
        <div class="am-u-sm-10 ">
            <button type="submit" class="am-btn am-btn-primary am-center" style="width: 60%;">提交</button>
        </div>
    </div>
</form>

